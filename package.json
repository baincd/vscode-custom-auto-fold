{
	"name": "custom-auto-fold",
	"displayName": "Custom Auto Fold",
	"description": "Automatically fold specific sections of files when opened",
	"publisher": "baincd",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "custom-auto-fold.autoFold",
				"title": "Run Auto Fold"
			}
		],
		"configuration": [
			{
				"properties": {
					"custom-auto-fold.rules": {
						 "type": "array",
						 "items": {
							 "type": "object",
							 "properties": {
								 "linePattern": {
									"type": "string",
									"description": "Regex pattern for line to fold (can match any line within folding region)",
									"examples": [
										"^import\\s"
									]
								 },
								 "fileGlob": {
									 "type": "string",
									 "description": "Only run this auto fold on files that match this file glob",
									 "examples": [
										 "**/*.java"
									 ]
								 },
								 "firstMatchOnly": {
									 "type": "boolean",
									 "description": "Only fold the first match (if false, every line that matches will be folded).",
									 "default": false
								 }
							 },
							 "required": [
								 "linePattern"
							 ],
							 "examples": [
								 {
									 "linePattern": "^import\\s",
									 "fileGlob":  "**/*.java"
								 }
							 ]
						 }
					},
					"custom-auto-fold.delay": {
						"type": "integer",
						"description": "ms delay before starting auto fold.  Auto fold must start after the folding ranges have been defined on the document.  Increase or decrease this delay based on your vscode performance.",
						"default": 250
					},
					"custom-auto-fold.betweenCommandsDelay": {
						"type": "integer",
						"description": "ms delay between commands.  Increasing this may solve issues if your vscode experiences lag.",
						"default": 10
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.1.3",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.6",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2"
	}
}
